<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"  android:weightSum="10" android:background="@drawable/round_rect_shift_unselected" >


	<TextView
		android:layout_width="0dp"
		android:layout_height="match_parent" android:layout_weight="0.7" />

    <LinearLayout  android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="8.6" android:weightSum="10" android:orientation="vertical" android:background="@drawable/round_rect_shift_unselected"   >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp" android:layout_weight="7" android:weightSum="10" android:orientation="horizontal" >

			<TextView  android:layout_width="0dp"  android:layout_height="match_parent" android:layout_weight="0.5" />

			<TextView
				android:id="@+id/rank"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="3"
				android:textSize="40dp"
				android:textColor="@color/grey"
				android:singleLine="true" />


		</LinearLayout>


			<Button
				android:id="@+id/btnEdit"
				android:layout_width="match_parent"
				android:layout_height="0dp" android:layout_weight="3"   android:textAllCaps="false" android:textColor="#ffffff"  android:textSize="16sp"  android:drawableRight="@color/grey"    />


    </LinearLayout>

	<TextView
		android:layout_width="0dp"
		android:layout_height="match_parent" android:layout_weight="0.7" />

</LinearLayout>
