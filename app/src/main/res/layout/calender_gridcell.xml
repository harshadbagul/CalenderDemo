<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp"
    >

    <Button
        android:id="@+id/calendar_day_gridcell"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:background="#ffffff">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignRight="@+id/calendar_day_gridcell" android:layout_below="@+id/calendar_day_gridcell" android:gravity="center" android:layout_marginTop="4dp" android:weightSum="10" android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvEvent1"
            android:layout_gravity="center"
            android:background="@drawable/circle_red"
            android:layout_width="5dp"
            android:visibility="gone"
            android:layout_height="5dp"  >
        </TextView>

        <TextView
            android:id="@+id/tvEvent2"
            android:layout_below="@+id/calendar_day_gridcell"
            android:layout_gravity="center"
            android:background="@drawable/circle_green"
            android:layout_width="5dp"
            android:visibility="gone"
            android:layout_height="5dp" android:layout_marginLeft="5dp"   >
        </TextView>

        <TextView
            android:id="@+id/tvEvent3"
            android:layout_below="@+id/calendar_day_gridcell"
            android:layout_gravity="center"
            android:background="@drawable/circle_yellow"
            android:layout_width="5dp"
            android:visibility="gone"
            android:layout_height="5dp" android:layout_marginLeft="5dp"  >
        </TextView>

        <TextView
            android:id="@+id/tvEvent4"
            android:layout_below="@+id/calendar_day_gridcell"
            android:layout_gravity="center"
            android:background="@drawable/circle_black"
            android:layout_width="5dp"
            android:visibility="gone"
            android:layout_height="5dp" android:layout_marginLeft="5dp"  >
        </TextView>


    </LinearLayout>


    
</RelativeLayout>